<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.keymanager.monitoring.dao.SupplierNexusDao">
    <sql id="colID">
        stm.fSupplierCode AS `supplierCode`,
        stm.fSupplierServiceTypeCode AS `supplierServiceTypeCode`
    </sql>

    <select id="findSupplierNexus" resultType="com.keymanager.monitoring.entity.SupplierNexus">
        SELECT
        <include refid="colID"/>
        FROM t_supplier_servicetype_mapping stm
        WHERE stm.fSupplierCode = #{supplierUuid}
    </select>

    <delete id="deleteSupplierBySupplierCode">
        DELETE FROM t_supplier_servicetype_mapping WHERE fSupplierCode = #{uuid}
    </delete>

</mapper>